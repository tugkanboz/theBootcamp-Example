<%- include("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
    <div class="ui divided items">
        <% blogs.forEach(function (blog) { %>
        <div class="item">
            <div class="image">
                <img src="<%= blog.image %>" >
            </div>
        </div>
            <div class="content">
                <a href="/blogs/<%= blog._id %>" class="header"></a>
                <div class="meta">
                    <span>
                        <%= blog.created.toDateString()%>
                    </span>
                </div>
                <div class="description">
                    <p> <%- blog.body%></p>
                </div>
                <div class="extra">
                    <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">Real More<i class="right chevron icon"></i> </a>
                </div>
            </div>
        <% }) %>
        </div>
    </div>
    </div>
</div>
<%- include("partials/footer") %>